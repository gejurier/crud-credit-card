<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{card.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Owner" value="{{card.owner}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="number" class="form-control" placeholder="Number" value="{{link.number}}">
                </div>
                <div class="form-group">
                    <input type="text" name="bank" class="form-control" placeholder="Bank" value="{{link.bank}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>